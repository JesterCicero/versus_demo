<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.rkhrapunov.versustest.presentation.quizlist.IQuizListContract.IQuizListPresenter"/>
        <variable
            name="presenter"
            type="IQuizListPresenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/quiz_list_recycler_view_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/quiz_list_recycler_view_margin_top_bottom"
            android:layout_marginBottom="@dimen/quiz_list_recycler_view_margin_top_bottom"
            android:scrollbarSize="@dimen/quiz_list_recycler_view_scroll_bar_size"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/mainColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/next_button_frame_layout_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/next_button_frame_layout_id"
            android:background="@drawable/next_button_selector"
            android:onClick="@{ () -> presenter.onBackToQuizzesButtonClickedIntent()}"
            android:layout_marginEnd="@dimen/quiz_list_margin_end"
            android:layout_marginRight="@dimen/quiz_list_margin_end"
            android:layout_marginBottom="@dimen/quiz_list_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            tools:visibility="visible">
            <ImageView
                tools:ignore="ContentDescription"
                android:layout_width="@dimen/quiz_list_next_button_width_height"
                android:layout_height="@dimen/quiz_list_next_button_width_height"
                android:paddingTop="@dimen/quiz_list_item_name_padding"
                android:paddingBottom="@dimen/quiz_list_item_name_padding"
                android:layout_gravity="center"
                android:id="@+id/nav_back_btn_icon_id"
                android:src="@drawable/ic_next"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>