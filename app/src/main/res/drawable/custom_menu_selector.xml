<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="@color/quizListItemSelectionColor" />
            <corners android:radius="@dimen/quiz_list_item_corner_radius"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/quizListItemSelectionColor" />
            <corners android:radius="@dimen/quiz_list_item_corner_radius"/>
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:drawable="@color/quizMenuItemSelectionColor" />
            <corners android:radius="@dimen/quiz_list_item_corner_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/quizMenuItemSelectionColor" />
            <corners android:radius="@dimen/quiz_list_item_corner_radius"/>
        </shape>
    </item>

</selector>